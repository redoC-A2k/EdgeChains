{
  "compilerOptions": {
    "types": [
      "dotenv/config",
      "node"
    ],
    "target": "ES2022",
    "module": "NodeNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "jsx": "react-jsx",
    "jsxImportSource": "hono/jsx",
    "noImplicitAny": false,
    "moduleResolution": "NodeNext",
    "declaration": true
  },
  "include": [
    "src/**/*.ts",
  ],
  "exclude": [
    "node_modules",
    "dist",
    "./src/tests/**/*"
  ]
}